<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    tools:context="com.imooc.studyapplication.KotlinTestActivity">

    <Button
        android:id="@+id/btn_kotlin_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kotlin 1"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_kotlin_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kotlin 2"
        android:textAllCaps="false"/>

    <Button
        android:id="@+id/btn_kotlin_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kotlin 3"
        android:textAllCaps="false"/>
</LinearLayout>
